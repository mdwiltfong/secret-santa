generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model GiftGivingSessions {
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  name        String   @db.VarChar(255)
  description String?
  date        DateTime
  users       Users[]
  Gifts       Gifts[]
}

model Users {
  id            Int                 @id @default(autoincrement())
  email         String              @unique
  firstName     String
  lastName      String
  password      String
  giftSession   GiftGivingSessions? @relation(fields: [giftSessionId], references: [id])
  giftSessionId Int
  gifts         Users_Gifts[]
}

model Gifts {
  id            Int                 @id @default(autoincrement())
  name          String
  description   String?
  link          String?
  giftSession   GiftGivingSessions? @relation(fields: [giftSessionId], references: [id])
  giftSessionId Int?
  user          Users_Gifts[]
}

model Users_Gifts {
  id     Int   @id @default(autoincrement())
  user   Users @relation(fields: [userId], references: [id])
  userId Int
  gift   Gifts @relation(fields: [giftId], references: [id])
  giftId Int
}
