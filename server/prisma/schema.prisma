// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Sessions {
  id                       Int                        @id @default(autoincrement())
  createdAt                DateTime                   @default(now())
  updatedAt                DateTime                   @updatedAt
  name                     String                     @db.VarChar(255)
  description              String?
  date                     DateTime
  sessionUserGifts         SessionUserGifts[]
}

model SessionUserGifts{
  id                       Int                        @id @default(autoincrement())
  createdAt                DateTime                   @default(now())
  updatedAt                DateTime                   @updatedAt
  session                  Sessions                 @relation(fields: [sessionID], references: [id])
  sessionID                Int
  user                     Users                      @relation(fields: [userId], references: [id])
  userId                   Int
  gift                     Gifts?                     @relation(fields: [giftId], references: [id])
  giftId                   Int?
  quantity                 Int                         @default(1)
}

model Users {
  id                       Int                        @id @default(autoincrement())
  email                    String                     @unique
  firstName                String?
  lastName                 String?
  password                 String
  sessionUserGifts         SessionUserGifts[]
  tokens                   EmailTokens[]
  inventory                UsersInventory[]
}

model UsersInventory{
  id                       Int                        @id @default(autoincrement())
  createdAt                DateTime                   @default(now())
  updatedAt                DateTime                   @updatedAt
  user                     Users                      @relation(fields: [userId], references: [id])
  userId                   Int
  gift                     Gifts                      @relation(fields: [giftId], references: [id])
  giftId                   Int
  quantity                 Int                        @default(0)
}

model EmailTokens {
 id         Int       @id @default(autoincrement())
 createdAt  DateTime  @default(now())
 updatedAt  DateTime  @updatedAt
 jwtToken   String   @unique
 valid      Boolean   @default(true)
 expiration DateTime

 // Relation fields
 user   Users @relation(fields: [userId], references: [id])
 userId Int
}


model Gifts {
  id            Int                 @id @default(autoincrement())
  name          String
  description   String?
  link          String?
  sessionUserGifts         SessionUserGifts[]
  usersInventory           UsersInventory[]
}